<?xml version="1.0"?>
<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="catalog_product_view"/>
    <body>
        <referenceContainer name="product.info.main">
            <block class="Rc\ProductFileAttribute\Block\MediaFile" before="product-info-price" name="product.info.vedio" template="Rc_ProductFileAttribute::vedio.phtml" />
        </referenceContainer>

        <referenceContainer name="product.info.extrahint">
            <block class="Rc\ProductFileAttribute\Block\MediaFile" after="product.info.social" name="product.info.mediafile" template="Rc_ProductFileAttribute::media_file.phtml" />
        </referenceContainer>
    </body>
</page>